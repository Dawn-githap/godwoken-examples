{
  "name": "@godwoken-examples/demo",
  "version": "0.0.1",
  "main": "build/js/index.ts",
  "types": "build/js/index.d.ts",
  "license": "MIT",
  "dependencies": {
    "@ckb-lumos/base": "^0.14.2-rc3",
    "@ckb-lumos/common-scripts": "^0.14.2-rc3",
    "@ckb-lumos/config-manager": "^0.14.2-rc3",
    "@ckb-lumos/hd": "^0.14.2-rc3",
    "@ckb-lumos/helpers": "^0.14.2-rc3",
    "@ckb-lumos/indexer": "^0.14.2-rc3",
    "@lay2/pw-core": "^0.3.21",
    "blake2b": "^2.1.3",
    "ckb-js-toolkit": "^0.9.3",
    "commander": "^6.2.1",
    "process": "^0.11.10"
  },
  "scripts": {
    "clean": "rm -rf build",
    "fmt": "prettier --write \"src/**/*.ts\" package.json",
    "cp-files": "cp -r src/html build/html && cp -r src/schemas build/schemas && cp -r src/configs build/configs",
    "build": "webpack --config webpack.dev.config.js && yarn run cp-files",
    "start": "webpack serve --config webpack.dev.config.js",
    "build:prod": "export NODE_ENV=production && webpack --config webpack.prod.config.js && yarn run cp-files",
    "build-cli": "tsc --build tsconfig.json ./src/cli && cp -r src/schemas build-cli/schemas",
    "clean-cli": "rm -rf build-cli"
  },
  "devDependencies": {
    "browserify": "^17.0.0",
    "ts-loader": "^8.0.12",
    "webpack": "^5.11.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.7.3"
  }
}
